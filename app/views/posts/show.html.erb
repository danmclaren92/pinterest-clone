<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= image_tag @post.image %>
			<p>
			  <strong>Description:</strong>
			  <%= @post.description %>
			</p>

			<p>
			  <strong>Posted By:</strong>
			  <%= @post.user.email %>
			</p>

			<%= link_to 'Edit', edit_post_path(@post) %> |
			<%= link_to 'Back', posts_path %>

		</div>
	</div>
</div>


